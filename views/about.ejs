    <title>About Us</title>
    <style>
        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #333;
            background-color: #e66565b8;
        }

        /* Styles for the navigation bar */
        .navbar {
            background-color: #ffffff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }

        .navbar-logo {
            width: 126px;
            height: 58px;
            margin-right: 10px;
        }

        .navbar-brand {
            font-size: 24px;
            font-weight: bold;
            text-decoration: none;
            color: black;
            margin: 0 auto;
        }

        .navbar-nav {
            list-style-type: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        .nav-item {
            margin-left: 20px;
        }

        .nav-link {
            text-decoration: none;
            color: #333333;
            font-weight: bold;
            transition: color 0.3s;
        }

        .nav-link:hover {
            color: #e66565b8;
        }

        /* Styles for the main content */
        .main {
            text-align: center;
            padding: 33px;
        }

        /* Styles for about, mission, and values sections */
        .about,
        .mission,
        .values {
            margin-bottom: 30px;
        }

        /* Styles for team section */
        .team-section {
            background: linear-gradient(
                    to right,
                    #e66565b8,
                    #dc5f5fb8,
                    #d25a61b8,
                    #c85465b8,
                    #be4f69b8,
                    #b4496db8,
                    #aa4472b8,
                    #a03e76b8,
                    #96397ab8,
                    #8c338eb8
            );
            color: #fff;
            padding: 50px;
        }

        .team-section h2 {
            font-size: 36px;
            margin-bottom: 50px;
        }

        .team-intro {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
        }

        .team-intro figure {
            margin: 0;
        }

        .team-intro img {
            border-radius: 50%;
            border: 5px solid #124c66;
            width: 100px;
            height: 100px;
            object-fit: cover;
        }

        /* Media Queries */
        /* For iPads */
        @media only screen and (max-width: 1024px) {
            .page-container {
                width: 80%;
            }

            .team-intro img {
                width: 150px;
                height: 150px;
            }

            .tr {
                display: flex !important;
                flex-flow: column !important;
            }
        }

        /* For Phones */
        @media only screen and (max-width: 768px) {
            .page-container {
                width: 90%;
            }

            .navbar {
                flex-direction: column;
                padding: 15px;
            }

            .navbar-logo {
                margin-right: 0;
            }

            .navbar-brand {
                margin: 10px 0;
            }

            .nav-item {
                margin: 10px 0;
            }

            .navbar-nav {
                justify-content: center;
            }

            .nav-link {
                margin: 0 10px;
            }

            .main {
                padding: 20px;
            }

            .team-intro img {
                width: 150px;
                height: 150px;
            }

            .tr {
                display: flex !important;
                flex-flow: column !important;
            }
        }

        ul {
            list-style-type: none;
        }
    </style>
